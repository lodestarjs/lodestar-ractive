{
  "rules": {
    "eqeqeq": 2,
    "no-var": 2,
    "no-empty": 2,
    "no-alert": 2,
    "camelcase": 2,
    "indent": [2, 2],
    "valid-jsdoc": 2,
    "no-lonely-if": 2,
    "default-case": 2,
    "no-redeclare": 2,
    "no-extra-semi": 2,
    "no-unreachable": 2,
    "max-depth": [ 2, 4 ],
    "no-throw-literal": 2,
    "no-extend-native": 2,
    "no-nested-ternary": 2,
    "no-trailing-spaces": 2,
    "semi": [ 2, "always" ],
    "quotes": [ 2, "single" ],
    "comma-style": [2, "last"],
    "consistent-this": [2, "self"],
    "max-nested-callbacks": [2, 2],
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"]
  },
  "ecmaFeatures": {
    "modules": true,
    "prefer-const": 2,
    "prefer-template": 2,
    "no-const-assign": 2,
    "object-shorthand": 2,
    "prefer-arrow-callback": 2
  },
  "env": {
    "es6": true,
    "browser": true
  }
}